<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lzz.SettingActivity">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_etc_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/log"
            android:gravity="center"
            android:padding="20dp"
            android:text="查询ETC账户信息"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_qiandao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/liveing"
            android:gravity="center"
            android:padding="20dp"
            android:text="用户签到"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/b"
            android:gravity="center"
            android:padding="20dp"
            android:text="查询ETC通行日志"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/map_layer"
            android:gravity="center"
            android:padding="20dp"
            android:text="当前版本号"
            android:textColor="#000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#058578"
            android:text="退出登录"
            android:textColor="#fff"
            android:textSize="25sp" />

    </LinearLayout>

</LinearLayout>